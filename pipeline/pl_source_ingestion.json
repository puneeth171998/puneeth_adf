{
	"name": "pl_source_ingestion",
	"properties": {
		"activities": [
			{
				"name": "env_config",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"dataset": {
						"referenceName": "ds_env_config",
						"type": "DatasetReference",
						"parameters": {
							"container": "datafactory-config",
							"directory": "APV/src_common/env_config_lookup",
							"filename": "env_config.json"
						}
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "source_config_details",
				"type": "Lookup",
				"dependsOn": [
					{
						"activity": "env_config",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"dataset": {
						"referenceName": "ds_env_config",
						"type": "DatasetReference",
						"parameters": {
							"container": {
								"value": "@activity('env_config').output.value[0]['config']['container']",
								"type": "Expression"
							},
							"directory": {
								"value": "@activity('env_config').output.value[0]['config']['source']['path']",
								"type": "Expression"
							},
							"filename": {
								"value": "@activity('env_config').output.value[0]['config']['source']['filename']",
								"type": "Expression"
							}
						}
					},
					"firstRowOnly": false
				}
			}
		],
		"annotations": []
	}
}